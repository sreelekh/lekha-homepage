---
import Layout from "../layouts/Layout.astro";
import { settings, newsItems } from "../settings.ts";
import { publications } from "../data/cv.ts";
---

<Layout title={settings.siteTitle}>
	<main>
		<!-- Hero Section -->
		<section
			class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-20"
		>
			<div class="container mx-auto px-4 text-center">
				<img
					src="/images/headshot.jpg"
					alt="Dr. Sreelekha Guggilam"
					class="w-32 h-32 rounded-full mx-auto mb-6 border-4 border-white shadow-lg"
				/>
				<h1 class="text-4xl md:text-6xl font-bold mb-4">
					{settings.fullName}
				</h1>
				<p class="text-xl mb-6">{settings.currentPosition.title}</p>
				<p class="text-lg">{settings.currentPosition.institution}</p>
			</div>
		</section>

		<!-- Research Interests -->
		<section class="py-16 bg-gray-50">
			<div class="container mx-auto px-4">
				<h2 class="text-3xl font-bold text-center mb-12">
					Research Interests
				</h2>
				<div class="grid md:grid-cols-4 gap-6">
					{
						settings.researchInterests
							.slice(0, 4)
							.map((interest) => (
								<div class="text-center p-6 bg-white rounded-lg shadow-md">
									<h3 class="font-semibold text-lg">
										{interest}
									</h3>
								</div>
							))
					}
				</div>
			</div>
		</section>

		<!-- Recent News -->
		<section class="py-16">
			<div class="container mx-auto px-4">
				<h2 class="text-3xl font-bold text-center mb-12">
					Recent News
				</h2>
				<div class="max-w-4xl mx-auto space-y-6">
					{
						newsItems.slice(0, 3).map((news) => (
							<div class="border-l-4 border-blue-600 pl-6 py-4">
								<p class="text-sm text-gray-600 mb-2">
									{news.date}
								</p>
								<h3 class="text-xl font-semibold mb-2">
									{news.title}
								</h3>
								<p class="text-gray-700">{news.description}</p>
							</div>
						))
					}
				</div>
			</div>
		</section>
	</main>
</Layout>
