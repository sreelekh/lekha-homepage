---
// src/pages/index.astro
import Layout from "../layouts/Layout.astro";

// Configuration variables - Update these as needed
const config = {
	name: "Sreelekha Guggilam",
	nickname: "Lekha",
	title: "Assistant Professor in Data Science",
	institution: "Texas A&M University, Corpus Christi",
	department: "Department of Mathematics and Statistics",
	email: "sreelekha.guggilam[at]tamucc.edu",
	linkedin: "https://linkedin.com/in/sreelekhaguggilam",
	github: "https://github.com/sreelekh",
	scholar: "https://scholar.google.com/citations?user=YOUR_SCHOLAR_ID",
	profileImage: "/profile-photo.jpg", // Add your profile photo to public folder

	bio: `I am an Assistant Professor in Data Science at the Department of Mathematics and Statistics at Texas A&M University, Corpus Christi, where I also serve as doctoral faculty in the Coastal and Marine Sciences Department. My research focuses on developing novel machine learning approaches for time-series analysis, anomaly detection, and quantum computing applications in spatiotemporal modeling.

Prior to joining Texas A&M, I was a Research and Development Associate at Oak Ridge National Laboratory, where I was honored as a DOE Early Career LDRD awardee for my research in quantum computing for spatiotemporal modeling. I received my Ph.D. in Computational Data Science from the University at Buffalo, where I developed innovative approaches for anomaly detection in evolving data streams.`,

	researchAreas: [
		{
			title: "Time-Series Analysis & Anomaly Detection",
			description:
				"Developing novel machine learning algorithms for detecting anomalies in streaming high-dimensional time series databases using extreme value theory and large deviations principles.",
			icon: "üìä",
		},
		{
			title: "Quantum Computing for Spatiotemporal Modeling",
			description:
				"Principal Investigator on DOE Early Career LDRD project developing quantum variational inference approaches for anomaly detection in spatiotemporal data.",
			icon: "‚öõÔ∏è",
		},
		{
			title: "Foundation Models & Generative AI",
			description:
				"Contributing to multimodal foundation model projects and developing applications in geospatial sciences, environmental monitoring, and pattern of life analysis.",
			icon: "ü§ñ",
		},
		{
			title: "Machine Learning for Geospatial Sciences",
			description:
				"Applying AI/ML assurance methods to geospatial data, developing models for environmental anomaly detection and biopreparedness applications.",
			icon: "üåç",
		},
	],

	quickFacts: [
		"DOE Early Career LDRD Awardee (2023) - $300k for 2 years",
		"Top Downloaded Author - Wiley Journal of Statistical Analysis and Data Mining (2023)",
		"8 research grants as PI and Co-PI totaling over $2M",
		"20+ publications in top-tier ML, data science, and geospatial journals",
		"Doctoral faculty in Coastal and Marine Sciences",
	],
};
---

<Layout title="Dr. Sreelekha Guggilam - Assistant Professor in Data Science">
	<section class="hero-section">
		<div class="hero-content">
			<div class="hero-text">
				<h1 class="hero-title">{config.name}</h1>
				<h2 class="hero-subtitle">{config.title}</h2>
				<p class="hero-institution">{config.institution}</p>
				<p class="hero-department">{config.department}</p>

				<div class="hero-links">
					<a
						href={`mailto:${config.email.replace("[at]", "@")}`}
						class="btn">Contact Me</a
					>
					<a href="/cv" class="btn btn-outline">View CV</a>
					<a href="/papers" class="btn btn-outline">Publications</a>
				</div>
			</div>

			<div class="hero-image">
				<img
					src={config.profileImage}
					alt={config.name}
					class="profile-photo"
				/>
			</div>
		</div>
	</section>

	<section class="section">
		<h2 class="section-title">About Me</h2>
		<div class="about-content">
			<div class="bio-text">
				{
					config.bio
						.split("\n\n")
						.map((paragraph) => (
							<p class="bio-paragraph">{paragraph}</p>
						))
				}
			</div>

			<div class="quick-facts">
				<h3 class="facts-title">Quick Facts</h3>
				<ul class="facts-list">
					{
						config.quickFacts.map((fact) => (
							<li class="fact-item">‚úì {fact}</li>
						))
					}
				</ul>
			</div>
		</div>
	</section>

	<section class="section">
		<h2 class="section-title">Research Areas</h2>
		<div class="research-grid">
			{
				config.researchAreas.map((area) => (
					<div class="research-card">
						<div class="research-icon">{area.icon}</div>
						<h3 class="research-title">{area.title}</h3>
						<p class="research-description">{area.description}</p>
					</div>
				))
			}
		</div>
		<div style="text-align: center; margin-top: 2rem;">
			<a href="/research" class="btn">View Detailed Research ‚Üí</a>
		</div>
	</section>

	<section class="section">
		<h2 class="section-title">Contact Information</h2>
		<div class="contact-grid">
			<div class="contact-card">
				<h3>Office Address</h3>
				<p>{config.institution}</p>
				<p>{config.department}</p>
				<p>Corpus Christi, TX</p>
			</div>

			<div class="contact-card">
				<h3>Email</h3>
				<p>
					<a href={`mailto:${config.email.replace("[at]", "@")}`}
						>{config.email}</a>
				</p>
			</div>

			<div class="contact-card">
				<h3>Connect</h3>
				<div class="social-links">
					<a
						href={config.linkedin}
						target="_blank"
						class="social-link">LinkedIn</a
					>
					<a href={config.github} target="_blank" class="social-link"
						>GitHub</a
					>
					<a href={config.scholar} target="_blank" class="social-link"
						>Google Scholar</a
					>
				</div>
			</div>
		</div>
	</section>
</Layout>

<style>
	.hero-section {
		padding: 3rem 0;
		background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
		margin: -2rem -20px 3rem -20px;
	}

	.hero-content {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 3rem;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 20px;
	}

	.hero-title {
		font-size: 3rem;
		color: var(--primary-color);
		margin-bottom: 0.5rem;
		font-weight: bold;
	}

	.hero-subtitle {
		font-size: 1.5rem;
		color: var(--secondary-color);
		margin-bottom: 0.5rem;
	}

	.hero-institution {
		font-size: 1.2rem;
		color: var(--text-light);
		margin-bottom: 0.25rem;
	}

	.hero-department {
		font-size: 1.1rem;
		color: var(--text-light);
		margin-bottom: 2rem;
	}

	.hero-links {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.hero-image {
		text-align: center;
	}

	.profile-photo {
		width: 250px;
		height: 250px;
		border-radius: 50%;
		object-fit: cover;
		border: 5px solid var(--secondary-color);
		box-shadow: var(--shadow);
	}

	.about-content {
		display: grid;
		grid-template-columns: 2fr 1fr;
		gap: 3rem;
	}

	.bio-paragraph {
		margin-bottom: 1.5rem;
		font-size: 1.1rem;
		text-align: justify;
	}

	.quick-facts {
		background: var(--background-light);
		padding: 2rem;
		border-radius: 8px;
		box-shadow: var(--shadow);
	}

	.facts-title {
		color: var(--primary-color);
		margin-bottom: 1rem;
		font-size: 1.3rem;
	}

	.facts-list {
		list-style: none;
	}

	.fact-item {
		margin-bottom: 0.75rem;
		color: var(--text-color);
	}

	.research-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.research-card {
		background: var(--background-light);
		padding: 2rem;
		border-radius: 8px;
		box-shadow: var(--shadow);
		text-align: center;
		transition: transform 0.3s ease;
	}

	.research-card:hover {
		transform: translateY(-5px);
	}

	.research-icon {
		font-size: 3rem;
		margin-bottom: 1rem;
	}

	.research-title {
		color: var(--primary-color);
		margin-bottom: 1rem;
		font-size: 1.3rem;
	}

	.research-description {
		color: var(--text-light);
		line-height: 1.6;
	}

	.contact-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.contact-card {
		background: var(--background-light);
		padding: 2rem;
		border-radius: 8px;
		box-shadow: var(--shadow);
		text-align: center;
	}

	.contact-card h3 {
		color: var(--primary-color);
		margin-bottom: 1rem;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.social-link {
		color: var(--secondary-color);
		text-decoration: none;
		padding: 0.5rem 1rem;
		border: 1px solid var(--secondary-color);
		border-radius: 5px;
		transition: all 0.3s ease;
	}

	.social-link:hover {
		background-color: var(--secondary-color);
		color: white;
	}

	@media (max-width: 768px) {
		.hero-content {
			grid-template-columns: 1fr;
			text-align: center;
		}

		.hero-title {
			font-size: 2.5rem;
		}

		.about-content {
			grid-template-columns: 1fr;
		}

		.profile-photo {
			width: 200px;
			height: 200px;
		}

		.research-grid {
			grid-template-columns: 1fr;
		}
	}
</style>
