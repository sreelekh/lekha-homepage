<Layout title="CV - Dr. Sreelekha Guggilam">
    <section class="cv-header">
        <div class="cv-title-section">
            <h1 class="page-title">Curriculum Vitae</h1>
            <div class="cv-meta">
                <span class="last-updated"
                    >Last Updated: {cvData.lastUpdated}</span
                >
            </div>

            <div class="cv-download-section">
                <a href={cvData.overleafLink} target="_blank" class="btn"
                    >üìÑ Download PDF (Overleaf)</a
                >
                <button onclick="window.print()" class="btn btn-outline"
                    >üñ®Ô∏è Print This Page</button
                >
            </div>
        </div>
    </section>

    <div class="cv-content">
        <section class="cv-section">
            <h2 class="cv-section-title">Education</h2>
            <div class="timeline">
                {
                    cvData.education.map((edu) => (
                        <div class="timeline-item">
                            <div class="timeline-marker" />
                            <div class="timeline-content">
                                <h3 class="timeline-title">{edu.degree}</h3>
                                <div class="timeline-institution">
                                    {edu.institution}
                                </div>
                                <div class="timeline-meta">
                                    <span class="timeline-location">
                                        üìç {edu.location}
                                    </span>
                                    <span class="timeline-period">
                                        üóìÔ∏è {edu.period}
                                    </span>
                                </div>
                                {edu.thesis && (
                                    <div class="timeline-detail">
                                        <strong>Thesis:</strong> {edu.thesis}
                                    </div>
                                )}
                                {edu.advisor && (
                                    <div class="timeline-detail">
                                        <strong>Advisors:</strong> {edu.advisor}
                                    </div>
                                )}
                                {edu.honors && (
                                    <div class="timeline-detail">
                                        <strong>Honors:</strong> {edu.honors}
                                    </div>
                                )}
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>

        <section class="cv-section">
            <h2 class="cv-section-title">Professional Experience</h2>
            <div class="timeline">
                {
                    cvData.experience.map((exp) => (
                        <div class="timeline-item">
                            <div class="timeline-marker" />
                            <div class="timeline-content">
                                <h3 class="timeline-title">{exp.title}</h3>
                                <div class="timeline-institution">
                                    {exp.organization}
                                </div>
                                {exp.department && (
                                    <div class="timeline-department">
                                        {exp.department}
                                    </div>
                                )}
                                <div class="timeline-meta">
                                    <span class="timeline-location">
                                        üìç {exp.location}
                                    </span>
                                    <span class="timeline-period">
                                        üóìÔ∏è {exp.period}
                                    </span>
                                    <span class="timeline-type">
                                        üè∑Ô∏è {exp.type}
                                    </span>
                                </div>
                                <ul class="timeline-responsibilities">
                                    {exp.responsibilities.map((resp) => (
                                        <li>{resp}</li>
                                    ))}
                                </ul>
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>

        <section class="cv-section">
            <h2 class="cv-section-title">Research Grants & Funding</h2>
            <div class="grants-grid">
                {
                    cvData.grants.map((grant) => (
                        <div class="grant-card">
                            <h3 class="grant-title">{grant.title}</h3>
                            <div class="grant-agency">{grant.agency}</div>
                            <div class="grant-details">
                                <span class="grant-amount">
                                    üí∞ {grant.amount}
                                </span>
                                <span class="grant-period">
                                    üóìÔ∏è {grant.period}
                                </span>
                                <span class="grant-role">üë§ {grant.role}</span>
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>

        <section class="cv-section">
            <h2 class="cv-section-title">Awards & Honors</h2>
            <div class="awards-grid">
                {
                    cvData.awards.map((award) => (
                        <div class="award-item">
                            <div class="award-year">{award.year}</div>
                            <div class="award-content">
                                <h3 class="award-title">{award.title}</h3>
                                <div class="award-organization">
                                    {award.organization}
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>

        <section class="cv-section">
            <h2 class="cv-section-title">Technical Skills</h2>
            <div class="skills-container">
                <div class="skills-category">
                    <h3>Programming Languages</h3>
                    <div class="skills-tags">
                        {
                            cvData.skills.programming.map((skill) => (
                                <span class="skill-tag">{skill}</span>
                            ))
                        }
                    </div>
                </div>

                <div class="skills-category">
                    <h3>Frameworks & Libraries</h3>
                    <div class="skills-tags">
                        {
                            cvData.skills.frameworks.map((skill) => (
                                <span class="skill-tag">{skill}</span>
                            ))
                        }
                    </div>
                </div>

                <div class="skills-category">
                    <h3>Quantum Computing</h3>
                    <div class="skills-tags">
                        {
                            cvData.skills.quantum.map((skill) => (
                                <span class="skill-tag">{skill}</span>
                            ))
                        }
                    </div>
                </div>

                <div class="skills-category">
                    <h3>Databases & Tools</h3>
                    <div class="skills-tags">
                        {
                            cvData.skills.databases
                                .concat(cvData.skills.tools)
                                .map((skill) => (
                                    <span class="skill-tag">{skill}</span>
                                ))
                        }
                    </div>
                </div>

                <div class="skills-category">
                    <h3>Research Specializations</h3>
                    <div class="skills-tags">
                        {
                            cvData.skills.specializations.map((skill) => (
                                <span class="skill-tag specialization">
                                    {skill}
                                </span>
                            ))
                        }
                    </div>
                </div>
            </div>
        </section>

        <section class="cv-section">
            <h2 class="cv-section-title">Teaching Experience</h2>
            <div class="teaching-list">
                {
                    cvData.teaching.map((course) => (
                        <div class="teaching-item">
                            <h3 class="course-title">{course.course}</h3>
                            <div class="course-details">
                                <span class="course-semester">
                                    {course.semester}
                                </span>
                                <span class="course-institution">
                                    {course.institution}
                                </span>
                                <span class="course-role">{course.role}</span>
                            </div>
                        </div>
                    ))
                }
            </div>
        </section>

        <section class="cv-section">
            <h2 class="cv-section-title">Professional Service</h2>

            <div class="service-subsection">
                <h3>Editorial & Review Service</h3>
                <div class="service-list">
                    {
                        cvData.service.editorial.map((journal) => (
                            <span class="service-item">{journal}</span>
                        ))
                    }
                </div>
            </div>

            <div class="service-subsection">
                <h3>Panel Judge & External Service</h3>
                <ul class="service-detailed-list">
                    {cvData.service.panels.map((panel) => <li>{panel}</li>)}
                </ul>
            </div>

            <div class="service-subsection">
                <h3>Committee Service</h3>
                <ul class="service-detailed-list">
                    {
                        cvData.service.committees.map((committee) => (
                            <li>{committee}</li>
                        ))
                    }
                </ul>
            </div>
        </section>

        <section class="cv-section">
            <h2 class="cv-section-title">Professional Memberships</h2>
            <div class="memberships-list">
                {
                    cvData.memberships.map((membership) => (
                        <div class="membership-item">{membership}</div>
                    ))
                }
            </div>
        </section>
    </div>
</Layout>

<style>
    .cv-header {
        background: linear-gradient(
            135deg,
            var(--primary-color) 0%,
            var(--secondary-color) 100%
        );
        color: white;
        padding: 3rem 0;
        margin: -2rem -20px 3rem -20px;
        text-align: center;
    }

    .cv-title-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .page-title {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .cv-meta {
        margin-bottom: 2rem;
        opacity: 0.9;
    }

    .last-updated {
        font-size: 1.1rem;
    }

    .cv-download-section {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .cv-download-section .btn {
        background: white;
        color: var(--primary-color);
        border: none;
    }

    .cv-download-section .btn-outline {
        background: transparent;
        color: white;
        border: 2px solid white;
    }

    .cv-download-section .btn-outline:hover {
        background: white;
        color: var(--primary-color);
    }

    .cv-content {
        max-width: 1000px;
        margin: 0 auto;
    }

    .cv-section {
        margin-bottom: 4rem;
    }

    .cv-section-title {
        font-size: 2rem;
        color: var(--primary-color);
        margin-bottom: 2rem;
        border-bottom: 3px solid var(--secondary-color);
        padding-bottom: 0.5rem;
    }

    /* Timeline Styles */
    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline::before {
        content: "";
        position: absolute;
        left: 1rem;
        top: 0;
        bottom: 0;
        width: 2px;
        background: var(--secondary-color);
    }

    .timeline-item {
        position: relative;
        margin-bottom: 3rem;
    }

    .timeline-marker {
        position: absolute;
        left: -1.5rem;
        top: 0.5rem;
        width: 1rem;
        height: 1rem;
        background: var(--secondary-color);
        border-radius: 50%;
        border: 3px solid white;
        box-shadow: 0 0 0 3px var(--secondary-color);
    }

    .timeline-content {
        background: var(--background-light);
        padding: 2rem;
        border-radius: 8px;
        box-shadow: var(--shadow);
        margin-left: 1rem;
    }

    .timeline-title {
        color: var(--primary-color);
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
    }

    .timeline-institution {
        font-size: 1.1rem;
        color: var(--text-color);
        margin-bottom: 0.3rem;
        font-weight: 500;
    }

    .timeline-department {
        color: var(--text-light);
        margin-bottom: 0.5rem;
        font-style: italic;
    }

    .timeline-meta {
        display: flex;
        gap: 1.5rem;
        margin-bottom: 1rem;
        flex-wrap: wrap;
    }

    .timeline-location,
    .timeline-period,
    .timeline-type {
        color: var(--text-light);
        font-size: 0.9rem;
    }

    .timeline-detail {
        margin-bottom: 0.5rem;
        color: var(--text-color);
    }

    .timeline-responsibilities {
        margin-top: 1rem;
        margin-left: 1.5rem;
    }

    .timeline-responsibilities li {
        margin-bottom: 0.5rem;
        color: var(--text-light);
    }

    /* Grants Grid */
    .grants-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
        gap: 2rem;
    }

    .grant-card {
        background: var(--background-light);
        padding: 2rem;
        border-radius: 8px;
        box-shadow: var(--shadow);
        border-left: 4px solid var(--secondary-color);
    }

    .grant-title {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.2rem;
    }

    .grant-agency {
        color: var(--text-color);
        font-weight: 500;
        margin-bottom: 1rem;
    }

    .grant-details {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .grant-amount,
    .grant-period,
    .grant-role {
        color: var(--text-light);
        font-size: 0.9rem;
    }

    .grant-amount {
        color: var(--secondary-color);
        font-weight: bold;
    }

    /* Awards Grid */
    .awards-grid {
        display: grid;
        gap: 1.5rem;
    }

    .award-item {
        display: flex;
        align-items: flex-start;
        gap: 2rem;
        background: var(--background-light);
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: var(--shadow);
    }

    .award-year {
        background: var(--secondary-color);
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        font-weight: bold;
        min-width: 60px;
        text-align: center;
    }

    .award-title {
        color: var(--primary-color);
        margin-bottom: 0.3rem;
        font-size: 1.1rem;
    }

    .award-organization {
        color: var(--text-light);
    }

    /* Skills */
    .skills-container {
        display: grid;
        gap: 2rem;
    }

    .skills-category {
        background: var(--background-light);
        padding: 2rem;
        border-radius: 8px;
        box-shadow: var(--shadow);
    }

    .skills-category h3 {
        color: var(--primary-color);
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }

    .skills-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .skill-tag {
        background: var(--secondary-color);
        color: white;
        padding: 0.3rem 0.8rem;
        border-radius: 15px;
        font-size: 0.9rem;
        transition: transform 0.2s ease;
    }

    .skill-tag:hover {
        transform: translateY(-2px);
    }

    .skill-tag.specialization {
        background: var(--primary-color);
    }

    /* Teaching */
    .teaching-list {
        display: grid;
        gap: 1.5rem;
    }

    .teaching-item {
        background: var(--background-light);
        padding: 1.5rem;
        border-radius: 8px;
        box-shadow: var(--shadow);
    }

    .course-title {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.1rem;
    }

    .course-details {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .course-semester,
    .course-institution,
    .course-role {
        color: var(--text-light);
        font-size: 0.9rem;
    }

    .course-role {
        color: var(--secondary-color);
        font-weight: bold;
    }

    /* Service */
    .service-subsection {
        margin-bottom: 2rem;
    }

    .service-subsection h3 {
        color: var(--primary-color);
        margin-bottom: 1rem;
        font-size: 1.2rem;
    }

    .service-list {
