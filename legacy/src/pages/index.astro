<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{config.name} - {config.title}</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}

			body {
				font-family: "Georgia", "Times New Roman", serif;
				line-height: 1.6;
				color: #333;
				max-width: 900px;
				margin: 0 auto;
				padding: 40px 20px;
				background-color: #fff;
			}

			.header {
				margin-bottom: 40px;
				text-align: center;
			}

			.name {
				font-size: 2.5em;
				font-weight: bold;
				color: #2c3e50;
				margin-bottom: 10px;
			}

			.title {
				font-size: 1.3em;
				color: #7f8c8d;
				margin-bottom: 5px;
			}

			.institution {
				font-size: 1.1em;
				color: #95a5a6;
				margin-bottom: 20px;
			}

			.links {
				display: flex;
				justify-content: center;
				gap: 20px;
				flex-wrap: wrap;
				margin-top: 20px;
			}

			.links a {
				color: #3498db;
				text-decoration: none;
				padding: 8px 15px;
				border: 1px solid #3498db;
				border-radius: 5px;
				transition: all 0.3s ease;
			}

			.links a:hover {
				background-color: #3498db;
				color: white;
			}

			.section {
				margin-bottom: 40px;
			}

			.section-title {
				font-size: 1.8em;
				color: #2c3e50;
				margin-bottom: 20px;
				border-bottom: 2px solid #3498db;
				padding-bottom: 5px;
			}

			.about-text {
				text-align: justify;
				margin-bottom: 20px;
				font-size: 1.05em;
			}

			.research-interests {
				display: flex;
				flex-wrap: wrap;
				gap: 10px;
				margin-top: 15px;
			}

			.interest-tag {
				background-color: #ecf0f1;
				color: #2c3e50;
				padding: 5px 12px;
				border-radius: 15px;
				font-size: 0.9em;
				border: 1px solid #bdc3c7;
			}

			.news-item {
				margin-bottom: 15px;
				padding: 10px;
				border-left: 3px solid #3498db;
				background-color: #f8f9fa;
			}

			.news-date {
				font-weight: bold;
				color: #2c3e50;
				margin-bottom: 5px;
			}

			.publication {
				margin-bottom: 20px;
				padding: 15px;
				background-color: #f8f9fa;
				border-radius: 5px;
			}

			.pub-title {
				font-weight: bold;
				color: #2c3e50;
				margin-bottom: 5px;
			}

			.pub-authors {
				color: #7f8c8d;
				margin-bottom: 5px;
			}

			.pub-venue {
				font-style: italic;
				color: #95a5a6;
			}

			.contact-info {
				background-color: #f8f9fa;
				padding: 20px;
				border-radius: 5px;
				text-align: center;
			}

			.email {
				font-size: 1.1em;
				color: #3498db;
				margin-bottom: 10px;
			}

			@media (max-width: 768px) {
				body {
					padding: 20px 15px;
				}

				.name {
					font-size: 2em;
				}

				.links {
					flex-direction: column;
					align-items: center;
				}

				.research-interests {
					justify-content: center;
				}
			}
		</style>
	</head>
	<body>
		<header class="header">
			<h1 class="name">{config.name}</h1>
			<div class="title">{config.title}</div>
			<div class="institution">{config.institution}</div>
			<div class="institution">{config.department}</div>

			<div class="links">
				<a href={`mailto:${config.email.replace("[at]", "@")}`}>Email</a
				>
				<a href={config.linkedin} target="_blank">LinkedIn</a>
				<a href={config.github} target="_blank">GitHub</a>
				<a href={config.scholar} target="_blank">Google Scholar</a>
			</div>
		</header>

		<main>
			<section class="section">
				<h2 class="section-title">About Me</h2>
				{
					config.bio
						.split("\n\n")
						.map((paragraph) => (
							<p class="about-text">{paragraph}</p>
						))
				}

				<h3
					style="margin-top: 25px; margin-bottom: 15px; color: #2c3e50;"
				>
					Research Interests
				</h3>
				<div class="research-interests">
					{
						config.researchInterests.map((interest) => (
							<span class="interest-tag">{interest}</span>
						))
					}
				</div>
			</section>

			<section class="section">
				<h2 class="section-title">News</h2>
				{
					config.news.map((item) => (
						<div class="news-item">
							<div class="news-date">{item.date}</div>
							<div>{item.content}</div>
						</div>
					))
				}
			</section>

			<section class="section">
				<h2 class="section-title">Selected Publications</h2>
				{
					config.selectedPublications.map((pub) => (
						<div class="publication">
							<div class="pub-title">{pub.title}</div>
							<div class="pub-authors">{pub.authors}</div>
							<div class="pub-venue">{pub.venue}</div>
						</div>
					))
				}
				<p style="margin-top: 20px; text-align: center;">
					<a
						href={config.scholar}
						target="_blank"
						style="color: #3498db; text-decoration: none;"
					>
						→ View all publications on Google Scholar
					</a>
				</p>
			</section>

			<section class="section">
				<h2 class="section-title">Contact</h2>
				<div class="contact-info">
					<div class="email">{config.email}</div>
					<div>{config.institution}</div>
					<div>{config.department}</div>
					<div>Corpus Christi, TX</div>
				</div>
			</section>
		</main>
	</body>
</html>
